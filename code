from tkinter import N
Continue = bool(True)    # loop the code
Cinput = "y"
A = [" $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10",]
B = [" $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10",]      # seat cost
C = [" $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10 ", " $10",]
D = [" $10 ", " $20 ", " $20 ", " $20 ", " $20 ", " $20 ", " $20 ", " $10",]
